<p id="notice"><%= notice %></p>

<h1>Listing Presents</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Date purcahsed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @presents.each do |present| %>
      <%= present %>
      <tr>
        <td><%= present.title %></td>
        <td><%= present.description %></td>
        <td><%= present.price %></td>
        <td><%= present.date_purchased %></td>

        <td><%= link_to 'Edit', [:edit, @friend, present] %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

